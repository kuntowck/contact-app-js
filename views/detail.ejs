<div class="container">
  <div class="row my-3">
    <div class="col-md-8">
      <h3>Detail Contact</h3>
      <% if (!contact) { %>
      <div class="alert alert-danger text-center" role="alert">
        Data contact tidak ada.
        <a href="../contact" class="alert-link">Kembali.</a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.notelp %>
          </h6>
          <p class="card-text"><%= contact.email %></p>
          <a
            href="/contact/edit/<%= contact.nama %>"
            class="btn btn-primary badge""
            >Ubah</a
          >
          <a
            href="/contact/delete/<%= contact.nama %>"
            class="btn btn-danger badge"
            onclick="return confirm('Yakin?')"
            >Hapus</a
          >
          <a href="../contact" class="card-link d-block mt-3">&laquo; Kembali</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
